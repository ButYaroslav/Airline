@model IEnumerable<Airline.Models.Airlines>

@{
    ViewData["Title"] = "Read Airlines";
}

<div class="row pt-4">
    <h2 class="text-primary">Авіакомпанії</h2>
    <div class="col-6 text-end">
        <a asp-action="Create" asp-controller="Airlines" class="btn btn-primary"> Додавання нової авіакомпанії</a>
    </div>
</div>
<br><br>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Назва авіакомпанії</th>
            <th>Порядок відображення</th>
            <th>Дії</th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
					<a asp-controller="Airlines" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary m-1"><i class="fa-regular fa-pen-to-square"></i> Оновити дані</a>
                    <a asp-controller="Airlines" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger m-1"><i class="fa-solid fa-trash"></i> Видалити</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p><b>ДАНІ АВІАКОМПАНІЙ НЕ ДОДАНІ!</b></p>
}