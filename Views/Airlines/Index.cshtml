@model IEnumerable<Airline.Models.Airlines>

@{
    ViewData["Title"] = "Read Airlines";
}

<div class="row pt-4">
    <div class="text-center">
		<h2 class="text-black">Авіакомпанії</h2>
	</div>

    <br><br>
    <div class="col-6 text">
        <span class="badge rounded-pill bg-warning"> <a asp-action="Create" asp-controller="Airlines" class="btn btn-warning"> ДОДАТИ ДАНІ НОВОЇ АВІАКОМПАНІЇ</a> </span>
    </div>
  
</div>
<br><br>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Назва авіакомпанії</th>
            <th>Країна, де авіакомпанія базується</th>
            <th>Порядок відображення</th>
            <th>Дії</th>
        </tr>
        @foreach (var obj in Model)
        {
			<tr>
                <td>@obj.Name</td>
                <td>@obj.NameCountry</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <span class="badge rounded-pill bg-primary"> <a asp-controller="Airlines" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary m-1"> Оновити дані</a></span>
                    <span class="badge rounded-pill bg-danger"> <a asp-controller="Airlines" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger m-1"> Видалити дані</a></span>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p><b>ДАНІ АВІАКОМПАНІЙ НЕ ДОДАНІ!</b></p>
}