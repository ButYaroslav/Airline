@model Airline.Models.Airlines

@{
    ViewData["Title"] = "Update Airlines";
}

<form asp-action="Update" method="post">
    <h1 class="text-black pl-3">Оновлення даних авіакомпанії</h1>
    <br>
    <div class="col-4">
        <label asp-for="Name"></label>
    </div>
    <div class="col-8">
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control">
    </div>
    <br>
    <div class="col-4">
        <label asp-for="NameCountry"></label>
    </div>
    <div class="col-8">
        <span asp-validation-for="NameCountry" class="text-danger"></span>
        <input asp-for="NameCountry" class="form-control">
    </div>
    <br>
    <div class="col-4">
        <label asp-for="DisplayOrder"></label>
    </div>
    <div class="col-8">
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        <input asp-for="DisplayOrder" class="form-control">
    </div>
    <br>
    <div class="d-grid gap-2 col-4 mx-1">
        <input type="submit" class="btn btn-success w-55" value="ОНОВИТИ ДАНІ">
        <a asp-action="Index" class="btn btn-danger w-55">НАЗАД</a> 
    </div>
</form>
