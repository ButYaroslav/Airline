@model IEnumerable<Airline.Models.Flights>

@{
    ViewData["Title"] = "Read Flights";
}

<div class="row pt-4">
    <h2 class="text-primary">Доступні рейси</h2>
    <div class="col-6 text-end">
		<a asp-action="Create" asp-controller="Flights" class="btn btn-primary"><i class="fa-regular fa-plus"></i> Додання нового рейсу</a>
    </div>
</div>
<br>
<br>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>НАЗВА РЕЙСУ</th>
            <th>АЕРОПОРТ ВИЛЬОТУ</th>
            <th>АЕРОПОРТ ПРИЛЬОТУ</th>
			<th>ДАТА ВИЛЬОТУ</th>
            <th>ДАТА ПРИЛЬОТУ</th>
            <th>ЧАС ВИЛЬОТУ</th>
            <th>ЧАС ПРИЛЬОТУ</th>
            <th>АВІАКОМПАНІЯ, ЯКА НАДАЄ ПОСЛУГИ</th>
            <th>ДІЇ</th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Namber</td>
                <td>@obj.DepartureAirport</td>
                <td>@obj.ArrivalAirport</td>
                <td>@obj.DepartureDate</td>
                <td>@obj.ArrivalDate</td>
                <td>@obj.DepartureTime</td>
                <td>@obj.ArrivalTime</td>
                <td>@obj?.Airlines?.Name</td>
                <td>
					<a asp-controller="Flights" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary m-1"><i class="fa-regular fa-pen-to-square"></i>Оновити</a>
                    <a asp-controller="Flights" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger m-1"><i class="fa-solid fa-trash"></i> Видалити</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p><b>Доступних рейсів немає!</b></p>
}